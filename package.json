{
	"name": "aerogameframework",
	"displayName": "AeroGameFramework",
	"version": "0.0.13",
	"description": "VSC extension for AeroGameFramework",
	"author": {
		"name": "Stephen Leitnick"
	},
	"publisher": "aerogameframework-vsce",
	"icon": "resources/logo_256.png",
	"galleryBanner": {
		"color": "#31597F",
		"theme": "dark"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Sleitnick/AeroGameFramework-VSCE/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Sleitnick/AeroGameFramework-VSCE"
	},
	"homepage": "https://github.com/Sleitnick/AeroGameFramework-VSCE/blob/master/README.md",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.agfinit",
		"workspaceContains:*.agf"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.agfinit",
				"title": "AeroGameFramework: Initialize"
			},
			{
				"command": "extension.agfcontext",
				"title": "AeroGameFramework: Create",
				"icon": "resources/script_add.png"
			},
			{
				"command": "extension.agfdelete",
				"title": "AeroGameFramework: Delete"
			}
		],
		"keybindings": [
			{
				"command": "extension.agfdelete",
				"key": "delete",
				"when": "agfHasFileSelection"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "extension.agfcontext",
					"group": "navigation",
					"when": "view == agfexplorerview"
				}
			],
			"view/item/context": [
				{
					"command": "extension.agfcontext",
					"group": "2_workspace",
					"when": "view == agfexplorerview"
				},
				{
					"command": "extension.agfdelete",
					"group": "7_modification",
					"when": "view == agfexplorerview"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "AeroGameFramework Configuration",
			"properties": {
				"agf.username": {
					"type": "string",
					"default": "Username",
					"description": "Username appended to new source files"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "agfexplorer",
					"title": "AGF Explorer",
					"icon": "resources/logo.svg"
				}
			]
		},
		"views": {
			"agfexplorer": [
				{
					"id": "agfexplorerview",
					"name": "Source Files",
					"when": "isAgfProject"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^1.13.0",
		"@typescript-eslint/parser": "^1.13.0",
		"@typescript-eslint/typescript-estree": "^1.13.0",
		"eslint": "^6.1.0",
		"typescript": "^3.5.3",
		"vscode": "^1.1.35",
		"@types/node": "^12.6.8",
		"@types/mocha": "^5.2.7"
	},
	"dependencies": {
		"@types/node-fetch": "^2.5.0",
		"node-fetch": "^2.6.0",
		"moment": "^2.24.0"
	}
}
